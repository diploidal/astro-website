---
export interface Props {
  dark?: boolean;
  title: string;
  body: string;
}

// const { dark = false } = Astro.props as Props;

const { title, body, dark = false } = Astro.props as Props;
---

<!-- <div class={`card ${dark && 'dark'}`}>
  <slot />
</div> -->
<div class={`card ${dark && 'dark'}`}>
  <h3>{title}</h3>
  <p>{body}</p>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }

  .dark {
    background: var(--color-primary);
    color: #fff;
  }
  @media (max-width: 500px) {
    .features .container {
      grid-template-columns: 1fr;
    }

    h1,
    h2 {
      text-align: center;
    }

    .footer div:nth-child(2) {
      display: none;
    }
  }
</style>
